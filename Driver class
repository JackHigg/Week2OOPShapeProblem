package Problems2;

import java.awt.*;
import java.util.Scanner;

public class Driver {

    static Scanner kboard = new Scanner(System.in);

    public static void main(String[] args){

        int choice=0;

        while(choice!=3) {

            System.out.println("Press 1 for rectangle, 2 for circle and 3 to exit : ");
            choice = kboard.nextInt();

            if (choice == 1) {
                System.out.println("\nOption 1 entered");
                Rectangle R1 = new Rectangle();

                R1.displayAll();
            }

            if (choice == 2) {
                System.out.println("\nOption 2 entered");
                Circle C1 = new Circle();

                C1.displayAll();
            }

            if (choice == 3) {
                System.out.println("\nExiting program... goodbye!");
            }

        }

    }
}
